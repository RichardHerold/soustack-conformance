{
  "name": "api-service",
  "version": "1.0.0",
  "description": "Sample API stack using PostgreSQL and Redis.",
  "components": [
    {
      "id": "database",
      "registry": "postgres",
      "version": "16.0.0",
      "config": {
        "port": 5432
      }
    },
    {
      "id": "cache",
      "registry": "redis",
      "version": "7.2.0",
      "config": {
        "port": 6379
      }
    }
  ],
  "workflows": [
    {
      "name": "smoke",
      "steps": [
        "npm install",
        "npm test"
      ]
    }
  ]
}
